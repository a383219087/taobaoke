<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="row_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5px</item>
        <item name="android:background">#aeaeae</item>
    </style>

    <style name="column_line">
        <item name="android:layout_width">0.5px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#aeaeae</item>
    </style>

    <style name="regist_agree" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_issave</item>
    </style>

    <style name="default_address_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/default_address_style</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

</resources>
