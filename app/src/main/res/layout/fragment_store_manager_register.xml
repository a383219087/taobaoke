<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_bg"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/search_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/main_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="申请信息"
                        android:textColor="@color/text_black"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:text="店长类型"
                        android:textColor="@color/textblack"
                        android:textSize="13sp"/>

                    <RadioGroup
                        android:id="@+id/rg_store_manager_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_gold"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/store_manager_radio_btn_selector"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="金牌店长"
                            android:textColor="@color/classify_item_text_color"
                            android:textSize="11sp"/>

                        <RadioButton
                            android:id="@+id/rb_silver"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/store_manager_radio_btn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="银牌店长"
                            android:textColor="@color/classify_item_text_color"
                            android:textSize="11sp"/>

                        <RadioButton
                            android:id="@+id/rb_cuprum"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/store_manager_radio_btn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="铜牌店长"
                            android:textColor="@color/classify_item_text_color"
                            android:textSize="11sp"/>

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_proxy_area"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可代理区域"
                        android:textColor="@color/textblack"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/edt_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请选择代理区域"
                        android:textSize="13sp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow_icon"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textColor="@color/textblack"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入您的姓名"
                        android:textSize="13sp"/>

                </LinearLayout>

                <View
                    style="@style/row_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/textblack"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:gravity="right|center_vertical"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:hint="请输入您的电话"
                        android:textSize="13sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/main_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="备注"
                        android:textColor="@color/text_black"
                        android:textSize="13sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="请输入备注内容"
                    android:lines="5"
                    android:padding="8dp"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★"
                        android:textColor="@color/main_color"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="店长说明"
                        android:textColor="@color/main_color"
                        android:textSize="11sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_register_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/store_manager_signup_remark"
                    android:textColor="@color/gray"
                    android:textSize="13sp"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_selector"
            android:text="提交申请"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</FrameLayout>