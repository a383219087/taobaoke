<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/get_medal_bg"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/medal_selected"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_medal"
                    android:layout_width="90dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:id="@+id/tv_medal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:text="认证打人"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/medal_detail_bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_tv_remark"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="恭喜您，获得了新的勋章！"
                android:textColor="@color/textblack"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="收入囊中"
                android:textColor="@color/white"
                android:textSize="16sp"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>