<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/default_padding"
        android:background="@drawable/action_sign_bg"
        android:gravity="center_vertical"
        android:id="@+id/ll_action_sign"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/sign_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="每日任务"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/main_gray"
                android:layout_marginTop="16dp"
                android:text="签到送好礼"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/action_share"
        android:background="@drawable/action_share_icon"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginLeft="@dimen/default_padding"/>

    <ImageView
        android:id="@+id/action_buy"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/action_buy"
        android:layout_margin="@dimen/default_padding"/>

</LinearLayout>
