<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/shape_radius_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/wechat_icon"
            android:drawablePadding="@dimen/default_padding"
            android:gravity="center"
            android:textColor="@color/textblack"
            android:textSize="12sp"
            android:text="微信好友"/>

        <TextView
            android:id="@+id/tv_share_wechat_moments"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/wechat_moments_icon"
            android:drawablePadding="@dimen/default_padding"
            android:gravity="center"
            android:textColor="@color/textblack"
            android:textSize="12sp"
            android:text="朋友圈"/>

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/qq_icon"
            android:drawablePadding="@dimen/default_padding"
            android:gravity="center"
            android:textColor="@color/textblack"
            android:textSize="12sp"
            android:text="QQ"/>

        <TextView
            android:id="@+id/tv_share_qq_zone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/qq_zone_icon"
            android:drawablePadding="@dimen/default_padding"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/textblack"
            android:text="QQ空间"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_white"
        android:text="取消"
        android:layout_margin="16dp"/>

</LinearLayout>