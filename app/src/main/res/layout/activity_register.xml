<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/name_press" />

                <EditText
                    android:id="@+id/regist_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:maxLength="12"
                    android:inputType="phone"
                    android:hint="请输入您的昵称"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/row_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/name_press" />

                <EditText
                    android:id="@+id/regist_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:maxLength="12"
                    android:inputType="phone"
                    android:hint="请输入您的手机号"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/row_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:id="@+id/regist_code_edt"
                    android:textSize="14sp" />

                <com.starnet.cqj.taobaoke.view.widget.ButtonCountDown
                    android:layout_width="90dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_red_button"
                    android:text="获取验证码"
                    android:id="@+id/regist_get_code"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/row_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pwd_icon_press" />

                <EditText
                    android:id="@+id/regist_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="6-30位数字或字母"
                    android:inputType="textPassword"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/row_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pwd_icon_press" />

                <EditText
                    android:id="@+id/regist_pwdagain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="再次输入密码"
                    android:inputType="textPassword"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/row_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/regist_recomer"
                    style="@style/regist_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:checked="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btn_blue_normal"
                    android:text="    我已同意用户注册协议"/>

            </LinearLayout>

            <View style="@style/row_line" />

            <LinearLayout
                android:id="@+id/recom_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tjrid_icon" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:id="@+id/recommend_id"
                        android:hint="请填写推荐人手机号码"
                        android:textSize="14sp" />
                </LinearLayout>

                <View style="@style/row_line" />
            </LinearLayout>

            <Button
                android:id="@+id/regist_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/shape_button"
                android:text="注　　册"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>